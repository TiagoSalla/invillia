<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="bank">
        <class>com.invillia.domain.Client</class>
        <class>com.invillia.domain.Account</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/bank"/>
            <property name="javax.persistence.jdbc.user" value="tiago" />
            <property name="javax.persistence.jdbc.password" value="123123" />
        </properties>
    </persistence-unit>
</persistence>