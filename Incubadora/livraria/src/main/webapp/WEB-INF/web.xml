<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>br.com.tiagosalla.controller.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jspServlet</servlet-name>
        <servlet-class>br.com.tiagosalla.controller.JspServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuarioController</servlet-name>
        <servlet-class>br.com.tiagosalla.controller.UsuarioController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jspServlet</servlet-name>
        <url-pattern>/xablau</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuarioController</servlet-name>
        <url-pattern>/usuarios/cadastro</url-pattern>
    </servlet-mapping>
</web-app>


